{% if isArticle %}
  <div class="article-header">
    {{ content }}

    <div class="article-meta-container">
      <div class="article-author">

        {% if author.avatar %}
          <img class="article-avatar" src="{{ file_url(author.avatar) }}" alt="{{ author.name }}'s avatar'">
        {% endif %}

        {% if author.name %}

          <p class="article-author-text">
            Written by
            <br>
            {% if author.website %}
              <a class="article-author-link" href="{{author.website}}">
              {% endif %}

              <strong>
                {{ author.name }}
              </strong>
              {% if author.website %}

              </a>
            {% endif %}

          </p>
        {% endif %}
      </div>

      {% if node.created %}
        <div class="article-created-container">
          <p class="article-date">Created on
            <br>
            <strong>{{ node.created }}</strong>
          </p>
        </div>
      {% endif %}

      {% if node.updated %}
        <div class="article-updated-container">
          <p class="article-date">Last updated
            <br>
            <strong>
              {{node.updated}}</strong>
          </p>
        </div>
      {% endif %}

    </div>
  </div>
{% endif %}
